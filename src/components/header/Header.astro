---
import { localizePath } from 'astro-i18next';
import { Image } from '@astrojs/image/components';
import DescktopMenu from '../menu/DescktopMenu.astro';
import MobileMenu from '../menu/MobileMenu.astro';
import LanguageMenu from '../menu/LanguageMenu.astro';

const navMenuList = [
  {
    title: 'home',
    href: '/',
  },
  {
    title: 'service',
    href: '/service',
  },
  {
    title: 'portfolio',
    href: '/portfolio',
  },
  {
    title: 'sale',
    href: '/sale',
  },
  {
    title: 'info',
    href: '/info',
  },
  {
    title: 'news',
    href: '/news',
  },
  {
    title: 'contact',
    href: '/contact',
  },
];
---

<header
  class='flex items-center justify-between max-w-[1920px] h-[120px] xl:h-[156px] px-[30px] xl:px-[70px]'
>
  <div class='flex items-end'>
    <a href={localizePath('/')}>
      <Image
        width={190}
        height={59}
        format='svg'
        src='/images/logo-black.svg'
        alt='logo-img'
        class='min-w-[130px] xl:max-w-[170px]'
      />
    </a>
    <p
      class='text-base xl:text-xl !leading-[120%] whitespace-nowrap font-medium text-gray border-l-[1px] border-[#838383] ml-4 pl-4'
    >
      Professional building <br /> of salt rooms
    </p>
  </div>
  <div class='flex'>
    <DescktopMenu menuList={navMenuList} />
    <LanguageMenu />
    <MobileMenu menuList={navMenuList} />
  </div>
</header>

